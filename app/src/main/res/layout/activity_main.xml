<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalcular"
            android:text="@string/btn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etBase" android:onClick="CalcularArea"/>
    <ImageView
            android:layout_width="190dp"
            android:layout_height="143dp" app:srcCompat="@drawable/img"
            android:id="@+id/imageView"
            android:layout_marginTop="120dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/etAltura" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.261"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAltura"
            android:hint="@string/altura" android:textAlignment="center" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="176dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etBase" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:hint="@string/base"
            android:textAlignment="center" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>